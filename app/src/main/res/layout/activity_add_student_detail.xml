<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".database.AddStudentDetailActivity">


    <EditText
        android:id="@+id/et_student_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Student Name"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/et_student_roll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Student Roll no"
        android:inputType="text" />


    <EditText
        android:id="@+id/et_student_blood_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Blood Group"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_student_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter phone number"
        android:inputType="phone" />


    <EditText
        android:id="@+id/et_student_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/btn_insert_student"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Enter data" />

</LinearLayout>